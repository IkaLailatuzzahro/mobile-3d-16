<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@+id/guide1"
        app:layout_constraintLeft_toLeftOf="@+id/guide4"
        android:src="@drawable/polinema_logo" />

    <TextView
        android:id="@+id/textLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="POLITRACDY"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toTopOf="@+id/guide1"
        app:layout_constraintLeft_toLeftOf="@+id/guide5" />

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:background="@color/purple_700"
        android:text="Polinema Tracer Study"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/guide1"
        app:layout_constraintLeft_toLeftOf="@+id/guide5" />

    <ImageButton
        android:id="@+id/btnAlumni"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@+id/guide2"
        app:layout_constraintLeft_toLeftOf="@+id/guide4"
        android:src="@drawable/graduate_icon"
        android:scaleType="fitCenter"
        android:onClick="clickAlumni"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:text="ALUMNI"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/guide2"
        app:layout_constraintLeft_toLeftOf="@+id/guide4"/>

    <ImageButton
        android:id="@+id/btnKonfirmasi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@+id/guide2"
        app:layout_constraintLeft_toLeftOf="@+id/guide6"
        android:src="@drawable/confirm_icon"
        android:scaleType="fitCenter"
        android:onClick="clickKonfirmasi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="KONFIRMASI"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/guide2"
        app:layout_constraintLeft_toLeftOf="@+id/guide6"/>

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintLeft_toLeftOf="@+id/guide4"
        android:src="@drawable/about_icon"
        android:scaleType="fitCenter"
        android:onClick="clickInfo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:text="INFO"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintLeft_toLeftOf="@+id/guide4"/>

    <ImageButton
        android:id="@+id/btnLacak"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintLeft_toLeftOf="@+id/guide6"
        android:src="@drawable/location_icon"
        android:scaleType="fitCenter"
        android:onClick="clickLacak"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:text="LACAK"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintLeft_toLeftOf="@+id/guide6"/>

    <ImageView
        android:id="@+id/imgBg"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/bg"
        app:layout_constraintTop_toTopOf="@+id/guide3" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide6"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>